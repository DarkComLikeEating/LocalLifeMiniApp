/* pages/shoplist/shoplist.wxss */
.shop-item {
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #efefef;
  margin: 15rpx;
  border-radius: 15rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.thumb image{
  width: 250rpx;
  height: 250rpx;
  display: block;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
  margin: 15rpx;
}

.shop-title {
  font-weight: bold;
}